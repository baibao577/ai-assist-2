{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port 9229",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "runtimeArgs": ["--preserve-symlinks"],
      "restart": true,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote (Port 9230)",
      "address": "localhost",
      "port": 9230,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI Chat",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "--import",
        "tsx",
        "${workspaceFolder}/src/cli.ts",
        "chat"
      ],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI with Arguments",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "--import",
        "tsx",
        "${workspaceFolder}/src/cli.ts"
      ],
      "args": ["${input:commandArguments}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      }
    }
  ],
  "inputs": [
    {
      "id": "commandArguments",
      "type": "promptString",
      "description": "Enter CLI command arguments (e.g., 'chat', 'db status', 'domains list')",
      "default": "chat"
    }
  ]
}